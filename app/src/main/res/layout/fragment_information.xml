<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:id="@+id/linear_address"
        android:elevation="10dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/location_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="270dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:text="Address here"
                android:textSize="14dp"
                android:id="@+id/tv_address"
                android:textColor="#808080"
                android:paddingLeft="10dp"
                android:layout_marginTop="0dp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:elevation="10dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/timing_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="270dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="Timing"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:text="Show Timing"
                android:textSize="14dp"
                android:textColor="#808080"
                android:paddingLeft="10dp"
                android:id="@+id/tv_timing"
              />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linear_phone"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/phone_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="270dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="Phone"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:text="+91-526398248"
                android:textSize="14dp"
                android:textColor="#808080"
                android:id="@+id/tv_phone"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linear_website"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/website_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="270dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="Website"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:text="www.dummyweb.com"
                android:textSize="14dp"
                android:textColor="#808080"
                android:paddingLeft="10dp"
                android:id="@+id/tv_websiteurl" />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>


</LinearLayout>